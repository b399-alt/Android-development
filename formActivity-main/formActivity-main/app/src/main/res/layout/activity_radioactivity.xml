<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/webView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Radioactivity">

    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radioPepe1"
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sad_pepe" />

        <RadioButton
            android:id="@+id/radioPepe2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="giggle_pepe" />

        <RadioButton
            android:id="@+id/radioPepe3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="batman_pepe" />


    </RadioGroup>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="94dp"
        android:layout_height="102dp"
        app:srcCompat="@drawable/pepe3"
        android:src="@drawable/pepe3"/>

</LinearLayout>